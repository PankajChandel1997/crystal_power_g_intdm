                    HorizontalAlignment="Right"
                    FontWeight="Regular"
                    Foreground="#fff"
                    Text="G 0.2"></TextBlock>
                <Image Margin="20,20,20,20" Height="64">
                    <Image.Source>
                        <BitmapImage  UriSource="../Images/crystalpowerwhite.png" />
                    </Image.Source>
                </Image>            
                <!--<Ellipse x:Name="avatar" Margin="0,10,0,0" Height="89" Width="179">
