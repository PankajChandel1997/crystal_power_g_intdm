<Window x:Class="CrystalPowerBCS.Views.Custom_Dailog.ConfirmationDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CrystalPowerBCS.Views.Custom_Dailog"
        mc:Ignorable="d"
        Title="ConfirmationDialogWindow" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Are you sure you want to reset?" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="16" Margin="0,25,0,0"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,67,0,0" RenderTransformOrigin="0.504,-0.778">
            <Button Name="YesButton" Content="Yes" Width="75" Margin="5" Click="YesButton_Click"/>
            <Button Name="NoButton" Content="No" Width="75" Margin="5" Click="NoButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
